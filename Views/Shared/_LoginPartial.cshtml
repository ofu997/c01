@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <div class="inline">
        <li class="nav-item alignLeftLogin">
            <a  class="nav-link text-dark plainLink" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item alignRight">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark oldFont alignRight">Logout</button>
            </form>
        </li>
    </div>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark navTitles oldFont" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark navTitles oldFont" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

