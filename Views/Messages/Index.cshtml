@model IEnumerable<MVCwithAuth.Models.Message>

@{
    Layout = "_Post";
}    

<div class="plexSerif">

    <span class="postHeadingFont">
        @{
            ViewData["Title"] = "IndexViewData";
        }
    </span>

    <h2 class="postHeadingFont">
        @ViewData["Message"]
    </h2>
    
    <h1 class="postHeadingFont">Index</h1>


    <p>
        <span class="pmLinks"><a asp-action="Create">Create New</a></span>
    </p>

    <form asp-controller="Messages" asp-action="Index" method="get" class="postHeadingFont">
        <p>
            Hashtag or search term: <input type="text" name="searchString">
            <input type="submit" value="Filter" />
        <p>
    </form>

    <div class="separatorIndexMessage">
    </div>

    <div class="container-fluid">
        <div /*class="itemsBackground"*/>
        
                    <table class="table postItemsBackground postFont">
                        <thead>
                            <tr>
                                <th id="thmid">
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th id="thmauthor">
                                    @Html.DisplayNameFor(model => model.Author)
                                </th>            
                                <th id="thmtitle">
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th id="thmcity">
                                    @Html.DisplayNameFor(model => model.City)
                                </th>  
                                <th id="thmpub">
                                    @Html.DisplayNameFor(model => model.Publisher)
                                </th>     
                                <th id="thmyear">
                                    @Html.DisplayNameFor(model => model.Year)
                                </th>                                    
                                <th id="thmtags">
                                    @Html.DisplayNameFor(model => model.Tags)
                                </th>            
                                <th id="thmcontent">
                                    @Html.DisplayNameFor(model => model.Content)
                                </th>
                                <th id="thmtimestamp">
                                    @Html.DisplayNameFor(model => model.TimeStamp)
                                </th>
                                <th id="thmuseremail">
                                    @Html.DisplayNameFor(model=> model.userEmail)
                                </th>
                                <th id="thmcontrols">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>     
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author)
                                </td>                        
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Publisher)
                                </td> 
                                <td>
                                    @Html.DisplayFor(modelItem => item.Year)
                                </td>                        
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tags)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Content)
                                </td>
                                <td>
                                    @item.TimeStamp
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.userEmail)
                                </td>
                                <td class="inline">
                                    
                                        <span class="pmLinks"><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></span>
                                        <span class="pmLinks"><a asp-action="Details" asp-route-id="@item.Id">Details</a></span>
                                        <span class="pmLinks"><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></span>
                        
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>

        </div>
    <div class="container">
</div>